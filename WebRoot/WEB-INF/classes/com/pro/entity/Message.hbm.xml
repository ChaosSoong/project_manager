<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="t_message" name="com.pro.entity.Message">
    <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="native" />
    </id>
    <property name="title" access="field" length="140" type="java.lang.String"/>
    <property name="content" access="field" length="1400" type="java.lang.String"/>
  	<property name="postDate" access="field" length="80" type="java.lang.String"/>
	<property name="isRead" access="field" length="8" type="java.lang.String"/>
	<property name="fromUser" access="field" length="88" type="java.lang.String"/>
	<property name="toUser" access="field" length="88" type="java.lang.String"/>
	<property name="fileId" access="field" length="88" type="java.lang.String"/>
  </class>
</hibernate-mapping>